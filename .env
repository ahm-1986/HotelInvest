# ---- DB naming ----
MONGO_DB_NAME=hotel_investment

# ---- Root (admin) credentials for container init + mongo-express ----
MONGO_INITDB_ROOT_USERNAME=admin
MONGO_INITDB_ROOT_PASSWORD=admin_pass

# ---- App user for your Node app (scoped to MONGO_DB_NAME) ----
MONGO_APP_USERNAME=app
MONGO_APP_PASSWORD=app_pass

# ---- Node.js server ----
# Using host port 27020 (as per compose), authSource = the app DB we created
MONGO_URI=mongodb://app:app_pass@localhost:27020/hotel_investment?authSource=hotel_investment
PORT=5000

# ---- JWT (example) ----
JWT_SECRET=replace_me_with_a_long_random_secret
